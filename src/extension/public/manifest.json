{
  "name": "Gitlab CLI",
  "description": "Gitlab PRs via CLI",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage","tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*/-/merge_requests/*"],
      "js": [
        "./content.js"
      ]
    },
    {
      "matches": ["https://*/-/*/personal_access_tokens","https://*/-/*/personal_access_tokens?*"],
      "js": [
        "./token.js"
      ]
    }
  ],  
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "gitlab-cli.png",
    "48": "gitlab-cli.png",
    "128": "gitlab-cli.png"
  }
}